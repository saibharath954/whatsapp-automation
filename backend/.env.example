# Server
PORT=3000
NODE_ENV=development
JWT_SECRET=change-me-in-production

# Postgres
DATABASE_URL=postgresql://wa_user:wa_pass@localhost:5432/wa_automation

# Redis
REDIS_URL=redis://localhost:6379

# LLM — Gemini (default)
LLM_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# LLM — OpenAI (alternative)
# LLM_PROVIDER=openai
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_MODEL=gpt-4o

# Embedding
EMBEDDING_PROVIDER=gemini
# EMBEDDING_PROVIDER=openai
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Vector DB
VECTOR_DB_PROVIDER=redis

# RAG Settings
RAG_TOP_K=4
RAG_SIMILARITY_THRESHOLD=0.75
LLM_CONFIDENCE_THRESHOLD=0.7
CONTEXT_MAX_MESSAGES=50
CONTEXT_MAX_DAYS=7

# S3 (media storage — stubbed to local for MVP)
S3_BUCKET=wa-media
S3_REGION=us-east-1
MEDIA_STORAGE=local
MEDIA_LOCAL_PATH=./uploads/media

# Session encryption
SESSION_ENCRYPTION_KEY=32-byte-hex-key-change-this

# Rate limiting
RATE_LIMIT_PER_ORG_PER_MINUTE=60
